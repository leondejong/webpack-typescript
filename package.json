{
  "name": "webpack-typescript-sass",
  "author": "author",
  "version": "1.0.0",
  "license": "Apache-2.0",
  "description": "Webpack TypeScript Sass",
  "keywords": [
    "webpack",
    "typescript",
    "sass",
    "ava",
    "prettier",
    "eslint",
    "stylelint"
  ],
  "main": "src/ts/index.ts",
  "type": "module",
  "homepage": "https://github.com/name/project#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/name/project.git"
  },
  "bugs": {
    "url": "https://github.com/name/project/issues"
  },
  "scripts": {
    "start": "yarn dev && yarn serve",
    "serve": "webpack serve --config webpack.dev.js",
    "dev": "webpack --config webpack.dev.js --output-path dist && yarn dev-assets",
    "prod": "webpack --config webpack.prod.js --output-path build && yarn prod-assets",
    "dev-assets": "copy src/html/**/*.* dist",
    "prod-assets": "copy src/html/**/*.* build",
    "lint-code": "eslint \"src/**/*.{js,ts}\"",
    "lint-style": "stylelint \"src/**/*.{css,scss}\"",
    "test": "ava"
  },
  "dependencies": {},
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@swc/core": "^1.3.31",
    "@tsconfig/recommended": "^1.0.2",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "ava": "^5.1.1",
    "copy": "^0.3.2",
    "css-loader": "^6.7.3",
    "eslint": "^8.33.0",
    "html-loader": "^4.2.0",
    "postcss": "^8.4.21",
    "prettier": "^2.8.3",
    "sass": "^1.57.1",
    "sass-loader": "^13.2.0",
    "style-loader": "^3.3.1",
    "stylelint": "^14.16.1",
    "stylelint-config-standard-scss": "^6.1.0",
    "swc-loader": "^0.2.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1",
    "webpack-merge": "^5.8.0"
  }
}
