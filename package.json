{
  "name": "webpack-typescript-sass",
  "author": "author",
  "version": "1.0.0",
  "license": "Apache-2.0",
  "description": "Webpack TypeScript Sass",
  "keywords": [
    "webpack",
    "typescript",
    "sass",
    "ava",
    "prettier",
    "eslint",
    "stylelint"
  ],
  "main": "src/ts/index.ts",
  "type": "module",
  "homepage": "https://github.com/name/project#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/name/project.git"
  },
  "bugs": {
    "url": "https://github.com/name/project/issues"
  },
  "scripts": {
    "start": "yarn dev && yarn serve",
    "serve": "webpack serve --config webpack.dev.js",
    "dev": "webpack --config webpack.dev.js --output-path dist && yarn dev-assets",
    "prod": "webpack --config webpack.prod.js --output-path build && yarn prod-assets",
    "dev-assets": "copy src/html/**/*.* dist",
    "prod-assets": "copy src/html/**/*.* build",
    "lint-code": "eslint \"src/**/*.{js,ts}\"",
    "lint-style": "stylelint \"src/**/*.{css,scss}\"",
    "test": "ava"
  },
  "dependencies": {},
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@swc/core": "^1.2.118",
    "@tsconfig/recommended": "^1.0.1",
    "@types/node": "^16.11.12",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "ava": "^4.0.0-rc.1",
    "copy": "^0.3.2",
    "css-loader": "^6.5.1",
    "eslint": "^8.4.1",
    "html-loader": "^3.0.1",
    "postcss": "^8.4.4",
    "prettier": "^2.5.1",
    "sass": "^1.44.0",
    "sass-loader": "^12.4.0",
    "style-loader": "^3.3.1",
    "stylelint": "^14.1.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "swc-loader": "^0.1.15",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.6.0",
    "webpack-merge": "^5.8.0"
  }
}
